{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "types": [
    "node"
  ],
  "include": [
    "./",
    "./index.html",
    "./main.css"
  ],
  "exclude": [
    "./node_modules"
  ],
  "hooks": [
    "copy-files"
  ]
}